<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= tutor.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tutors/<%=tutor._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= tutor.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= tutor.image %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="description" value="<%= tutor.description %>">-->
                <!--</div>-->
                <div class="form-group">
                    <!--<input class="form-control" type="text" name="description" placeholder="Your skills">-->
                    <div class="select-wrap">
                      <label>Your Coding Language</label>
                      <select name="description" value="<%= tutor.description %>" style="width: 100%;">
                        <option value="<%= tutor.description %>"><%= tutor.description %></option>
                        <option value="Python">Python</option>
                        <option value="Java">Java</option>
                        <option value="C++">C++</option>
                        <option value="C#">C#</option>
                        <option value="Ruby">Ruby</option>
                        <option value="JavaScript">JavaScript</option>
                        <option value="PHP">PHP</option>
                        <option value="SQL">SQL</option>
                        <option value="C">C</option>
                      </select>
                    </div>                    
                </div>   
                
                <div class="form-group">
                    <div class="select-wrap">
                      <label>Your Technical Skill</label>
                      <select name="description1" value="<%= tutor.description1 %>" style="width: 100%;">
                        <option value="<%= tutor.description1 %>"><%= tutor.description1 %></option>
                        <option value="Algorithms">Algorithms</option>
                        <option value="Android">Android</option>
                        <option value="APIs">APIs</option>
                        <option value="AWS">AWS</option>
                        <option value="Cloud Computing">Cloud Computing</option>
                        <option value="Data Analysis">Data Analysis</option>
                        <option value="Hardware">Hardware</option>
                        <option value="Machine Learning">Machine Learning</option>
                        <option value="UI/UX">UI/UX</option>
                      
                      </select>
                    </div>                    
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="schedule" value="<%= tutor.schedule %>" >
                </div>
                
                
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/tutors">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

