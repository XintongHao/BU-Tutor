<!doctype html>
<html>
<head>
    <title>BU User profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- TUTORL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Tutor Profile</h3>
                <!--<div class="thumbnail">-->
                <% if (user.userTutor) { %>
                    <img src="<%= user.userTutor.image %>" style=" width:50%;">
                    <div class="caption-full">
                    <h4><a><%= user.userTutor.name %></a></h4>
                    <p><strong>Code Skill</strong>: <%= user.userTutor.description %></p>
                    <p><strong>Technical Skill</strong>: <%= user.userTutor.description1 %></p>
                    </div>
                <% } else { %>
                    <strong>There is no Tutro profile of you.</strong>
                <% } %>   
               <!--</div> -->
            </div>
        </div>

       

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

                <% if (user.userInfo.googleId) { %>
                    <p>
                        <strong>id</strong>: <%= user.userInfo.googleId %><br>
                        <strong>email</strong>: <%= user.userInfo.email %><br>
                        <strong>name</strong>: <%= user.userInfo.username %>
                    </p>

                    <!--<a href="/unlink/google" class="btn btn-danger">Unlink</a>-->
                    <a class="btn btn-primary btn-lg" href="tutors">Go Back to Tutors page</a>
                <% } else { %>
                    <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                <% } %>

            </div>
        </div>
    </div>

    <!--<div class="text-center">-->
    <!--    <p>A demo by <a href="http://scotch.io">Scotch</a>.</p>-->
    <!--    <p>Visit the <a href="http://scotch.io/tutorials/javascript/easy-node-authentication-setup-and-local">tutorial</a>.</p>-->
    <!--</div>-->

</div>
</body>
</html>
